<form action="/rates" method="post" class="container">
  <div class="d-flex flex-column w-50">
    <label for="address_line_one">Address line 1: </label>
    <input id="address_line_one" type="text" name="address_line_one">
  </div>
  <div class="d-flex flex-column w-50">
    <label for="address_line_two">Address line 2: </label>
    <input id="address_line_two" type="text" name="address_line_two">
  </div>
  <div class="d-flex flex-column w-50">
    <label for="city">City: </label>
    <input id="city" type="text" name="city">
  </div>
  <div class="d-flex flex-column w-50">
    <label for="province">Province: </label>
    <input id="province" type="text" name="province">
  </div>
  <div class="d-flex flex-column w-50">
    <label for="postalCode">Postal code: </label>
    <input id="postalCode" type="text" name="postalCode">
  </div>
  <div class="d-flex flex-column w-50">
    <label for="country">Country: </label>
    <input id="country" type="text" name="country">
  </div>
  <input type="submit" value="Submit">
</form>